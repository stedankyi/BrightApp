@inherits LayoutComponentBase

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Color="Color.Info" Elevation="0">
        <MudText Typo="Typo.h4"><b>Home</b></MudText>
    </MudAppBar>
    <MudDrawer Anchor="Anchor.Left" Width="280px" Class="px-2" @bind-Open="_drawerOpen" Elevation="1">
        <MudDrawerHeader>
            <MudIconButton Icon="@Icons.Custom.Brands.Twitter" Size="Size.Large" Color="Color.Info" />
        </MudDrawerHeader>
        <LeftNavMenu />
    </MudDrawer>
    <MudDrawer Anchor="Anchor.Right" Width="320px" Class="px-2" @bind-Open="_drawerOpen" Elevation="1">
        <MudDrawerHeader>
            <MudTextField Immediate="true"
                          @bind-Value="@_searchtext"
                          Label="Search"
                          Variant="Variant.Outlined"
                          Adornment="Adornment.End"
                          AdornmentIcon="@Icons.Filled.Search"
                          Margin="Margin.Dense" />
        </MudDrawerHeader>
        <RightNavMenu />
    </MudDrawer>
    <MudMainContent>
        <MudContainer Class="mt-8 mx-auto px-8" MaxWidth="MaxWidth.False">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    public string Search { get; set; } = string.Empty;
    bool _drawerOpen = true;
    string _searchtext = "";

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }

}